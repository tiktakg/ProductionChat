FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src

# Копируем файл проекта
COPY ProductionChatClient/ProductionChat.Client.csproj .
RUN dotnet restore ProductionChat.Client.csproj

# Копируем остальные файлы
COPY ProductionChatClient/ .
COPY ProductionChat.Shared/ ./ProductionChat.Shared/
RUN dotnet publish ProductionChat.Client.csproj -c Release -o /app/publish

FROM mcr.microsoft.com/dotnet/aspnet:9.0
WORKDIR /app
COPY --from=build /app/publish .
ENTRYPOINT ["dotnet", "ProductionChat.Client.dll"]